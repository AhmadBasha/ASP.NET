@model Customer
@{
    ViewData["Title"] = "Profile";
}

    <div class="text-center">
        <h1 class="display-4">View Profile (@Model.CustomerName)</h1>

        <table>
            <tr>
                <th>Name</th>
                <td>@Model.CustomerName</td>
            </tr>

            <tr>
                <th>Address</th>
                <td>@Model.Address</td>
            </tr>

            <tr>
                <th>City</th>
                <td>@Model.City</td>
            </tr>

            <tr>
                <th>State</th>
                <td>@Model.State</td>
            </tr>

            <tr>
                <th>Post Code</th>
                <td>@Model.PostCode</td>
            </tr>

            <tr>
                <th>Phone</th>
                <td>@Model.Phone</td>
            </tr>

            <tr>
                <th>TFN</th>
                <td>@Model.TFN</td>
            </tr>
        </table>

        <a asp-action="Edit">Edit</a>
        |
        <a asp-action="Password">Change Password</a>

    </div>
