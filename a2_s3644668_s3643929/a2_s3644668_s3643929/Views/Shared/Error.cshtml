@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">Error.</h1>
<h2 class="text-danger">An error occurred while processing your request.</h2>

@if (Model.ShowRequestId)
{
<p>
    <strong>Request ID:</strong> <code>@Model.RequestId</code>

    @if (Model.StatusCode != null)
    {

        <h1>Error : @Model.StatusCode</h1>

        <h3>@Model.ErrorMessage</h3>

        @*<h3>EP: @Model.ErrorPath</h3>

            <h3>QS: @Model.QuerryString</h3>*@
    }
</p>
}


@if (Model.StatusCode == null && Model.getDetails())
{
    <h3>Custom Error View</h3>
    <hr />
    <h3>Exception Details:</h3>
    <div class="alert alert-danger">
        <h5>Exception Path</h5>
        <hr />
        <p>@Model.ExceptionPath</p>
    </div>

    <div class="alert alert-danger">
        <h5>Exception Message</h5>
        <hr />
        <p>@Model.ExceptionMessage</p>
    </div>

    <div class="alert alert-danger">
        <h5>Exception Stack Trace</h5>
        <hr />
        <p>@Model.StackTrace</p>
    </div>
}

<a asp-action="Index" asp-controller="Home">Go back Home.</a>


